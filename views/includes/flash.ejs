<% if(success && success.length){ %>
  <div class="alert alert-success alert-dismissible fade show col-6 offset-3 text-center" 
  role="alert">
    <%= success %>
      <button 
      type="button" 
      class="btn-close" data-bs-dismiss="alert" aria-label="Close"
      >
      </button>
  </div>
  <% } %>

<% if(error && error.length){ %>
  <div class="alert alert-warning alert-dismissible fade show col-6 offset-3 text-center" 
  role="alert">
    <%= error %>
      <button 
      type="button" 
      class="btn-close" data-bs-dismiss="alert" aria-label="Close"
      >
      </button>
  </div>
  <% } %>  

    <!-- //success is array which exists , therefore we need to check length of array also.
if empty array then dont show flash.  -->